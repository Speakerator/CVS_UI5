<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:layout="sap.ui.layout">
	<Dialog title="Details" type="Standard" contentWidth="1000px">
		<beginButton>
			<Button text="Close" app:dialogType="Msg" press="onDialogCloseButton" />
		</beginButton>

<!-- 		"/resultsPage/results/event/0"
 -->		
		
		<f:SimpleForm minWidth="2048" maxContainerCols="2"
			editable="false" layout="ResponsiveGridLayout" title="Event-Details:"
			labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2"
			columnsM="2">
			<f:content>
				<Label text="Event" />
				<Text text="{displayName}" />

				<Label text="Location" />
				<Text text="{location/city}" />

				<Label text="Date" />
				<Text text="{start/date}" />

				<Label text="Time" />
				<Text text="{start/time}" />

				<Label text="Type" />
				<Text text="{type}" />
				
				<Label text="URL" />
				<Text text="{uri}" />

				
				<!-- <Label text="Time" />
				<Text text="{ArtistCalendar>start/time}" /> -->


			</f:content>
		</f:SimpleForm>


	</Dialog>
</core:FragmentDefinition>